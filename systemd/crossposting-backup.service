[Unit]
Description=Crossposting Service - Database Backup
After=network.target postgresql.service
Requires=postgresql.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/root/crossposting_service
Environment="PATH=/root/crossposting_service/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/root/crossposting_service/venv/bin/python /root/crossposting_service/scripts/backup_database.py
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

